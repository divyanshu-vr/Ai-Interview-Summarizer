{
  "name": "real-time-interview-summarizer",
  "version": "1.0.0",
  "description": "Desktop application for real-time meeting transcription and AI-powered summarization",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:renderer",
    "build:renderer": "react-scripts build",
    "build:electron": "electron-builder",
    "test": "react-scripts test",
    "test:unit": "react-scripts test tests/unit",
    "test:integration": "react-scripts test tests/integration",
    "test:e2e": "react-scripts test tests/e2e",
    "test:setup": "node tests/setup/verify-setup.js",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix"
  },
  "keywords": [
    "electron",
    "react",
    "meeting",
    "transcription",
    "ai",
    "summarization"
  ],
  "author": "Real-Time Interview Summarizer Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/transformers": "^3.7.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@xenova/transformers": "^2.17.2",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-react-app": "^7.0.1",
    "fake-indexeddb": "^6.0.1",
    "jest-environment-jsdom": "^30.0.5",
    "jest-transform-css": "^6.0.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.realtime.interview.summarizer",
    "productName": "Real-Time Interview Summarizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
